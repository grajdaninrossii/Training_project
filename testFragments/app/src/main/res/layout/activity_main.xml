<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/button_fragment"
        android:name="com.example.testfragments.ButtonsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/buttons_fragment" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/checkbox_fragment"
        android:name="com.example.testfragments.CheckboxFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/checkbox_fragment" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/image_fragment"
        android:name="com.example.testfragments.ImageFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/image_fragment" />

</LinearLayout>