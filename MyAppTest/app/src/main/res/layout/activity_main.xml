<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:id="@+id/solve"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterText_c"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="49dp"
        android:backgroundTint="@color/black"
        android:onClick="solveEquation"
        android:text="Решить"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/transfer"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="126dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="125dp"
        android:onClick="Click"
        android:text="Играть" />

    <TextView
        android:id="@+id/text_solve"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transfer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="95dp"
        android:autoSizeMinTextSize="20dp"
        android:gravity="center"
        android:text="ax2+bx+c=0" />

    <EditText
        android:id="@+id/enterText_a"
        android:layout_width="227dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_solve"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="91dp"
        android:hint="a" />

    <EditText
        android:id="@+id/enterText_b"
        android:layout_width="227dp"
        android:layout_height="40dp"
        android:layout_below="@+id/enterText_a"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="93dp"
        android:hint="b" />

    <EditText
        android:id="@+id/enterText_c"
        android:layout_width="227dp"
        android:layout_height="40dp"
        android:layout_below="@+id/enterText_b"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="93dp"
        android:hint="c" />

    <TextView
        android:id="@+id/text_answer"
        android:layout_width="282dp"
        android:layout_height="67dp"
        android:layout_below="@+id/solve"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="67dp"
        android:autoSizeMinTextSize="20dp"
        android:text="Здесь будет ответ на твой вопрос, парень, парднон, дама)"
        android:textSize="15dp" />

</RelativeLayout>